{
  "name": "ordertech-kiosk",
  "version": "0.1.1",
  "description": "OrderTech Drive â€” Windows kiosk shell (Electron)",
  "private": true,
  "main": "src/main.js",
  "author": "OrderTech",
  "license": "UNLICENSED",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win nsis",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-log": "^5.1.2",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.2.1",
    "node-wifi": "^2.0.16"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron-builder": "^24.13.3",
    "electron": "^30.0.9"
  },
  "build": {
    "appId": "com.ordertech.kiosk",
    "productName": "OrderTech Kiosk",
    "files": [
      "src/**/*",
      "package.json"
    ],
    "asar": true,
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "win": {
      "target": ["nsis"]
      
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "allowElevation": true,
      "runAfterFinish": false,
      "allowToChangeInstallationDirectory": false
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://storage.googleapis.com/ordertech-kiosk-feed/win/"
      }
    ]
  }
}

